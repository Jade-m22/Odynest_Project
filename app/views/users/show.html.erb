<section>
  <h1>Profil de <%= @user.username.presence || @user.email %></h1>

  <p><strong>Email:</strong> <%= @user.email %></p>

  <% if @user.username.present? %>
    <p><strong>Pseudo:</strong> <%= @user.username %></p>
  <% end %>

  <% if @user.admin? %>
    <p><strong>Rôle :</strong> Administrateur</p>
  <% else %>
    <p><strong>Rôle :</strong> Utilisateur</p>
  <% end %>

  <% if current_user %>
  <p><%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-primary" %></p>
  <% end %>
</section>
