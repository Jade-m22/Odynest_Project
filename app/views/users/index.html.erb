<h1>Liste des utilisateurs</h1>

<% if @users.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Pseudo</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username || 'Non renseignÃ©' %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Voir', user_path(user), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Aucun utilisateur inscrit pour le moment.</p>
<% end %>
<div class="mt-3">
  <%= link_to 'Retour au tableau de bord', user_dashboard_path, class: 'btn btn-secondary' %>
</div>