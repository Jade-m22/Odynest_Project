<section class="profile-container">
  <header class="profile-header">
    <h2 class="profile-name">Modifier votre profil</h2>
  </header>

  <!-- ✅ Formulaire de mise à jour du profil utilisateur -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "profile-form" }) do |f| %>
    
    <!-- ✅ Affichage des erreurs si besoin -->
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- ✅ Champ email et pseudo -->
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    <%= f.text_field :username, class: "form-control", placeholder: "Pseudo" %>

    <!-- ✅ Nouveau mot de passe -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :password, class: "form-control", id: "user_password", autocomplete: "new-password", placeholder: "Nouveau mot de passe" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_password">👁️</button>
      </div>
    </fieldset>

    <!-- ✅ Confirmation du mot de passe -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :password_confirmation, class: "form-control", id: "user_password_confirmation", autocomplete: "new-password", placeholder: "Confirmer le mot de passe" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_password_confirmation">👁️</button>
      </div>
    </fieldset>

    <!-- ✅ Mot de passe actuel (requis pour valider les changements) -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :current_password, class: "form-control", id: "user_current_password", autocomplete: "current-password", placeholder: "Mot de passe actuel" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_current_password">👁️</button>
      </div>
    </fieldset>

    <!-- ✅ Boutons de validation / retour -->
    <div class="profile-actions">
      <%= f.submit "💾 Enregistrer", class: "btn btn-save" %>
      <%= link_to "Retour", request.referrer || root_path, class: "btn btn-cancel" %>
    </div>
  <% end %>

  <!-- ✅ Suppression du compte -->
  <div class="profile-delete mt-4 text-center">
    <h5 class="text-danger">Supprimer mon compte</h5>
    <p class="text-warning">⚠️ Cette action est irréversible</p>

    <%= button_to registration_path(resource_name),
        method: :delete,
        data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" },
        class: "btn-delete mx-auto", title: "Supprimer mon compte" do %>
      <svg viewBox="0 0 448 512" class="svgIcon" width="20" height="20" fill="white">
        <path d="..."/>
      </svg>
    <% end %>
  </div>
</section>
