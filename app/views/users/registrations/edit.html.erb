<section class="profile-container">
  <header class="profile-header">
    <h2 class="profile-name">Modifier votre profil</h2>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "profile-form" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    <%= f.text_field :username, class: "form-control", placeholder: "Pseudo" %>

    <!-- Nouveau mot de passe -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :password, class: "form-control", id: "user_password", autocomplete: "new-password", placeholder: "Nouveau mot de passe" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_password">ğŸ‘ï¸</button>
      </div>
    </fieldset>

    <!-- Confirmation du mot de passe -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :password_confirmation, class: "form-control", id: "user_password_confirmation", autocomplete: "new-password", placeholder: "Confirmer le mot de passe" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_password_confirmation">ğŸ‘ï¸</button>
      </div>
    </fieldset>

    <!-- Mot de passe actuel -->
    <fieldset class="form-group w-100">
      <div class="password-wrapper d-flex align-items-center gap-2">
        <%= f.password_field :current_password, class: "form-control", id: "user_current_password", autocomplete: "current-password", placeholder: "Mot de passe actuel" %>
        <button type="button" class="toggle-password btn btn-outline-secondary" data-target="user_current_password">ğŸ‘ï¸</button>
      </div>
    </fieldset>

    <div class="profile-actions">
      <%= f.submit "ğŸ’¾ Enregistrer", class: "btn btn-save" %>
      <%= link_to "Retour", request.referrer || root_path, class: "btn btn-cancel" %>
    </div>
  <% end %>

