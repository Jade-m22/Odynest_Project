<section class="login-container">
  <h2>Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- Email -->
    <fieldset class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </fieldset>

    <!-- Mot de passe avec ≈ìil -->
    <fieldset class="form-group">
      <%= f.label :password, "Mot de passe" %><br>
      <div class="password-wrapper">
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field", id: "login_password" %>
        <button type="button" class="toggle-password" data-target="login_password">üëÅÔ∏è</button>
      </div>
    </fieldset>

    <!-- Se souvenir de moi -->
    <% if devise_mapping.rememberable? %>
      <fieldset class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </fieldset>
    <% end %>

    <!-- Bouton -->
    <footer class="form-actions">
      <%= f.submit "Se connecter", class: "submit-btn" %>
    </footer>
  <% end %>

  <nav class="form-links">
    <%= render "users/shared/links" %>
  </nav>
</section>
