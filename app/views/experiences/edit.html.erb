<section class="container mt-5">
  <header>
    <h1 class="text-center">Modifier l'expérience</h1>
  </header>

  <section class="row mt-4">
    <article class="col-md-8 offset-md-2">
      <%= form_with model: @experience, local: true, multipart: true do |f| %>
        <fieldset>
          <legend>Détails de l'expérience</legend>

          <label for="experience_title">Titre</label>
          <%= f.text_field :title, class: "form-control", required: true, id: "experience_title" %>

          <label for="experience_description">Description</label>
          <%= f.text_area :description, class: "form-control", required: true, id: "experience_description" %>

          <label for="experience_location">Lieu</label>
          <%= f.text_field :location, class: "form-control", required: true, id: "experience_location" %>

          <label for="experience_price">Prix (€)</label>
          <%= f.number_field :price, step: 0.01, class: "form-control", required: true, id: "experience_price" %>

          <label for="experience_duration">Durée</label>
          <%= f.select :duration, 
            [["30 minutes", 30], ["1 heure", 60], ["2 heures", 120], ["1 jour", 1440], ["2 jours", 2880]], 
            {}, class: "form-control", id: "experience_duration" %>
        </fieldset>

        <fieldset>
          <legend>Dates de début</legend>

          <label for="experience_start_date_1">Date de début 1</label>
          <%= f.datetime_select :start_date_1, class: "form-control", id: "experience_start_date_1" %>

          <label for="experience_start_date_2">Date de début 2</label>
          <%= f.datetime_select :start_date_2, class: "form-control", id: "experience_start_date_2" %>

          <label for="experience_start_date_3">Date de début 3</label>
          <%= f.datetime_select :start_date_3, class: "form-control", id: "experience_start_date_3" %>
        </fieldset>

        <fieldset>
          <legend>Ajouter une photo</legend>
          
          <label for="experience_photo">Photo de l'expérience</label>
          <%= f.file_field :photo, class: "form-control", id: "experience_photo" %>

          <% if @experience.photo.attached? %>
            <figure class="mt-3">
              <figcaption>Image actuelle :</figcaption>
              <%= image_tag @experience.photo, class: "img-thumbnail", width: "150" %>
            </figure>
          <% end %>
        </fieldset>

        <nav class="text-center">
          <%= f.submit "Mettre à jour", class: "btn btn-primary mt-3" %>
          <%= link_to 'Annuler', experiences_path, class: "btn btn-secondary mt-3" %>
        </nav>
      <% end %>
    </article>
  </section>
</section>
