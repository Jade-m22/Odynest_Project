<section class="profile-container">
  <header class="profile-header">
    <h2 class="profile-name">Modifier votre profil professionnel</h2>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "profile-form" }) do |f| %>
    <%= render "providers/shared/error_messages", resource: resource %>

    <!-- Avatar -->
    <% if resource.profile_picture.attached? %>
      <%= image_tag resource.profile_picture, class: "profile-avatar" %>
    <% else %>
      <%= image_tag "default_profile_picture.png", class: "profile-avatar" %>
    <% end %>

    <%= f.file_field :profile_picture, class: "form-control" %>

    <!-- Email -->
    <%= f.email_field :email, class: "form-control", placeholder: "Adresse e-mail", autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-warning">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
    <% end %>

    <!-- Pr√©nom -->
    <%= f.text_field :first_name, class: "form-control", placeholder: "Pr√©nom (optionnel)" %>

    <!-- Mot de passe -->
    <%= f.password_field :password, class: "form-control", placeholder: "Nouveau mot de passe" %>
    <% if @minimum_password_length %>
      <small class="text-muted"><%= @minimum_password_length %> caract√®res minimum</small>
    <% end %>

    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation mot de passe" %>

    <%= f.password_field :current_password, class: "form-control", placeholder: "Mot de passe actuel" %>

    <div class="profile-actions">
      <%= f.submit "üíæ Enregistrer", class: "btn btn-save" %>
      <%= link_to "Retour", request.referrer || root_path, class: "btn btn-cancel" %>
    </div>
  <% end %>

