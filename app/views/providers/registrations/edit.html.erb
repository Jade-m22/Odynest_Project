<section class="edit-profile container mt-5">
  <h2 class="mb-4">Modifier votre profil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>
    <%= render "providers/shared/error_messages", resource: resource %>

    <!-- Photo de profil -->
    <div class="form-group mb-4 text-center">
      <% if resource.profile_picture.attached? %>
        <%= image_tag resource.profile_picture, class: "rounded-circle shadow-sm mb-2", width: 120 %>
      <% else %>
        <%= image_tag "default_profile_picture.png", class: "rounded-circle shadow-sm mb-2", width: 120 %>
      <% end %>
      <%= f.file_field :profile_picture, class: "form-control-file mt-2" %>
    </div>

    <!-- Email -->
    <div class="form-group mb-3">
      <%= f.label :email, "Adresse e-mail" %>
      <%= f.email_field :email, class: "form-control", autocomplete: "email", autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-warning mb-3">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
    <% end %>

    <!-- Pr√©nom -->
    <div class="form-group mb-3">
      <%= f.label :first_name, "Pr√©nom (optionnel)" %>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Entrez votre pr√©nom" %>
    </div>

    <!-- Mot de passe -->
    <div class="form-group mb-3">
      <%= f.label :password, "Nouveau mot de passe" %> <i>(laissez vide pour ne pas le changer)</i>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">
          <%= @minimum_password_length %> caract√®res minimum
        </small>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :current_password, "Mot de passe actuel" %> <i>(requis pour confirmer les modifications)</i>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <div class="text-center">
      <%= f.submit "üíæ Enregistrer les modifications", class: "btn btn-primary px-4" %>
    </div>
  <% end %>

  <!-- Suppression du compte -->
  <div class="card mt-4 p-3 bg-light">
    <h5 class="text-danger">Supprimer mon compte</h5>
    <p>Vous souhaitez quitter OdyNest ?</p>
    <%= button_to "üóëÔ∏è Supprimer mon compte", registration_path(resource_name),
        method: :delete,
        data: { confirm: "√ätes-vous s√ªr de vouloir supprimer votre compte ?" },
        class: "btn btn-danger" %>
  </div>

  <div class="mt-3">
    <%= link_to "‚Üê Retour", request.referrer || root_path, class: "btn btn-outline-secondary" %>
  </div>
</section>
