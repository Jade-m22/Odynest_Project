<% content_for :title, "Cr√©er un compte | Odynest" %>
<main class="registration-container-pro">
  <h2>Cr√©er un compte</h2>
  <p class="text-center mt-0">PROFESSIONNEL</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "registration-form" }) do |f| %>
    <%= render "providers/shared/error_messages", resource: resource %>

    <!-- Email -->
    <section class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </section>

    <!-- Mot de passe avec ≈ìil -->
    <section class="form-group">
      <%= f.label :password, "Mot de passe" %><br>
      <div class="password-wrapper">
        <%= f.password_field :password, class: "input-field", id: "user_password", autocomplete: "new-password" %>
        <button type="button" class="toggle-password" data-target="user_password">
          üëÅÔ∏è
        </button>
      </div>
    </section>

    <!-- Suggestion mot de passe -->
    <section class="form-group">
      <button type="button" class="suggestion-btn" onclick="generatePassword()">üîí Sugg√©rer un mot de passe s√©curis√©</button>
      <p id="suggested-password" class="hint"></p>
    </section>

    <!-- Confirmation -->
    <section class="form-group">
      <%= f.label :password_confirmation, "Confirmation du Mot de passe" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </section>

    <!-- ‚úÖ Case √† cocher pour accepter les CGU -->
    <section class="form-group">
      <label class="checkbox-label">
        <%= check_box_tag :accept_terms, "1", false, id: "accept_terms" %>
        J'accepte les <%= link_to "conditions g√©n√©rales d'utilisation", terms_path, target: "_blank", rel: "noopener", class: "terms-link" %>
      </label>
    </section>

    <!-- Submit -->
    <footer class="form-actions">
      <%= f.submit "Cr√©er mon compte", class: "submit-btn" %>
    </footer>
  <% end %>

  <nav class="form-links">
    <%= render "providers/shared/links" %>
  </nav>
</main>
