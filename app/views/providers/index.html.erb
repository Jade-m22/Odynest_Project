<h1>Liste des prestataires</h1>
<% if @providers.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Prénom</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @providers.each do |provider| %>
        <tr>
          <td><%= provider.first_name || 'Non renseigné' %></td>
          <td><%= provider.email %></td>
          <td><%= link_to 'Contacter', "mailto:#{provider.email}", class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Aucun prestataire inscrit pour le moment.</p>
<% end %>
<div class="mt-3">
  <%= link_to 'Retour au tableau de bord', user_dashboard_path, class: 'btn btn-secondary' %>
</div>